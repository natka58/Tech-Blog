<div class="mb-5 pt-3">
    <a href="/dashboard/createpost/"><button id="create-post" class="button is-success is-pulled-right">Create post</button></a>

    <h2 class="title pb-4">Dashboard: Your posts</h2><hr>
{{#if posts.length}}
    </div>

    {{#each posts as |post|}}
        {{> post-info post}}

        <a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ml-5 is-warning">Edit post</button></a>
        </div>
    {{/each}}

{{else}}
    <h6 class="pb-4 has-text-centered">You don't have any submitted posts</h6>

{{/if}}