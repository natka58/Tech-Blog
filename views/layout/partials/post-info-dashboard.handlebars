<div class="card border border-dark rounded">
  <div class="card-header text-white bg-dark">
    <h3 class="card-title">{{title}}</h3>
    <p class="subtext">Posted by {{user.username}} on {{format_date created_at}}</p>
  </div>
  <div class="card-body">
    <p class="card-text">{{post_content}}</p>
    <a class="card-subtext" href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
     | 
    <a href="/dashboard/edit/{{id}}" class="edit-link card-subtext">Edit post</a>
  </div>
</div>